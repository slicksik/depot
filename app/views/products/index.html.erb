<h1>Κατάλογος Προιόντων</h1>

<table>

<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  <td> 
	<%= image_tag(product.image_url, class: 'list_image') %>
	</td>
	<td class="list_description">
		<dl>
			<dt><%= product.title %> </dt>
			<dd><%= product.description %></dd>
			</dl>
			</td>
    <td><%= link_to 'Σελίδα Προιόντος', product %></td>
    <td><%= link_to 'Ανανέωση', edit_product_path(product) %></td>
    <td><%= link_to 'Διαγραφή', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Προσθήκη Προιόντος', new_product_path %>
